#OBJS
OBJS = $(wildcard *.cpp)

#OUTPUT_NAME
OUTPUT_NAME = OpenGL

#LINK_FLAGS
LINK_FLAGS = -lGLEW -lGLU -lGL -lglfw

#INCLUDE_FLAGS
INCLUDE_FLAGS = -Iinc

#COMPILE_FLAGS
COMPILE_FLAGS = -Wall -O3

all:
	$(CXX) $(OBJS) $(LINK_FLAGS) $(INCLUDE_FLAGS) $(COMPILE_FLAGS) -o $(OUTPUT_NAME)

clean:
	rm $(OUTPUT_NAME)
